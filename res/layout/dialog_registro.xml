<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondo" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="top"
        android:orientation="vertical"
        android:padding="10dip" >

        <!-- Direccion -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:singleLine="true"
            android:text="DirecciÃ³n"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/txtDireccion"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dip"
            android:background="@drawable/input_movilu_normal"
            android:editable="false"
            android:enabled="false"
            android:inputType="none" />

        <!-- Barrio -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:singleLine="true"
            android:text="Barrio"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/txtBarrio"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dip"
            android:background="@drawable/input_movilu_normal"
            android:inputType="text" />

        <!-- Puntos de referencia -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:singleLine="true"
            android:text="Puntos de referencia"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/txtPreferencia1"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dip"
            android:background="@drawable/input_movilu_normal"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtPreferencia2"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dip"
            android:background="@drawable/input_movilu_normal"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtPreferencia3"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dip"
            android:background="@drawable/input_movilu_normal"
            android:inputType="text" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"
            android:background="@drawable/boton_movilu_normal"
            android:text="@string/label_bt_registro"
            android:textColor="#ffffff" />
    </LinearLayout>

</ScrollView>
