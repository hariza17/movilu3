<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_entrada"
            style="@style/SingleGradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:onClick="CambiarHorario"
            android:text="@string/tex_bt_entrada" />

        <Button
            android:id="@+id/bt_salida"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:onClick="CambiarHorario"
            android:text="@string/tex_bt_salida" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contenedor_principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>
